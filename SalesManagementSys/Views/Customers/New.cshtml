@model SalesManagementSys.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (@Html.BeginForm("Save", "Customers"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(c => c.FirstName)
        @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.LastName)
        @Html.TextBoxFor(c => c.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Sex)
        @Html.TextBoxFor(c => c.Sex, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Sex)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.DateofBirth)
        @Html.TextBoxFor(c => c.DateofBirth, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.DateofBirth)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Address)
        @Html.TextBoxFor(c => c.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.State)
        @Html.TextBoxFor(c => c.State, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.State)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Street)
        @Html.TextBoxFor(c => c.Street, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Street)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.MobileNo)
        @Html.TextBoxFor(c => c.MobileNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.MobileNo)
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.PhoneNo)
        @Html.TextBoxFor(c => c.PhoneNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.PhoneNo)
    </div>
    @Html.Hidden("Customer.CustomerID", (Model != null) ? Model.CustomerID : 0)
    @Html.HiddenFor(c => c.CustomerID)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

